{% extends 'base.html.twig' %}

{% block title %}Kontakt index{% endblock %}

{% block body %}
    <h1>Kontakt index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for kontakt in kontakts %}
            <tr>
                <td>{{ kontakt.id }}</td>
                <td>{{ kontakt.firstName }}</td>
                <td>{{ kontakt.lastName }}</td>
                <td>{{ kontakt.email }}</td>
                <td>{{ kontakt.message }}</td>
                <td>
                    <a href="{{ path('kontakt_show', {'id': kontakt.id}) }}">show</a>
                    <a href="{{ path('kontakt_edit', {'id': kontakt.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('kontakt_new') }}">Create new</a>
{% endblock %}
